<div id="content" class="container">
	<h1>{{title}}</h1>
	<table class='drone-info'>
		<tbody>
			<tr>
				<td>Altitude: <span id='altitude'></span></td>
				<td>Battery %: <span id='battery'></span></td>
				<td>Fly State: <span id='fly-state'></span></td>
				<td>Control State: <span id='control-state'></span></td>
			</tr>
		</tbody>
	</table>

	<h2>Controls:</h2>

	<canvas id="pictures"></canvas>
	<!--
	<div id="pictures"></div>
	-->

	<dl>
		<dt>Up</dt>
		<dd>a</dd>
		<dt>Down</dt>
		<dd>z</dd>
		<dt>Forwards</dt>
		<dd>arrow up</dd>
		<dt>Backwards</dt>
		<dd>arrow down</dd>
		<dt>Left</dt>
		<dd>arrow left</dd>
		<dt>Right</dt>
		<dd>arrow right</dd>
		<dt>Takeoff</dt>
		<dd>enter</dd>
		<dt>Land</dt>
		<dd>escape</dd>
	</dl>
</div>


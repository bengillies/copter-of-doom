<div id="content" class="container">
	<h1>{{title}}</h1>
	<ul class='drone-info'>
		<li>
			<div class='label'>Altitude:</div>
			<div id='altitude'>-</div>
		</li>
		<li>
			<div class='label'>Battery %:</div>
			<div id='battery'>-</div>
		</li>
		<li>
			<div class='label'>Fly State: </div>
			<div id='fly-state'>-</div>
		</li>
		<li>
			<div class='label'>Control State:</div>
			<div id='control-state'>-</div>
		</li>
	</ul>
	<h2>Controls:</h2>

	<canvas id="pictures"></canvas>

	<dl>
		<dt>Up</dt>
		<dd>a</dd>
		<dt>Down</dt>
		<dd>z</dd>
		<dt>Forwards</dt>
		<dd>arrow up</dd>
		<dt>Backwards</dt>
		<dd>arrow down</dd>
		<dt>Left</dt>
		<dd>arrow left</dd>
		<dt>Right</dt>
		<dd>arrow right</dd>
		<dt>Takeoff</dt>
		<dd>enter</dd>
		<dt>Land</dt>
		<dd>escape</dd>
	</dl>
</div>

